<%- include ('../partials/header') %>

<div class="computer only row space">
    <div class="column">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 40%; margin: 0 auto">
            <form class="ui form segment formPadding" action="/meals/<%= meal_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="field">
                    <label>Comment</label>
                    <input type="text" name="comment[text]" placeholder="Comment" value="<%= comment.text %>">
                </div>
                <div class="field">
                    <button class="ui teal basic button" type="submit">Add Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>

