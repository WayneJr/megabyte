<%- include ('../partials/header') %>

<div class="computer only row space">
    <div class="column">
        <h1 style="text-align: center">Add New Comment to <%= meal_name %> </h1>
        <div style="width: 40%; margin: 0 auto">
            <form class="ui form segment formPadding" action="/meals/<%= meal_id %>/comments" method="POST">
                <div class="field">
                    <label>Author</label>
                    <input type="text" name="comment[author]" placeholder="Author">
                </div>
                <div class="field">
                    <label>Image</label>
                    <input type="text" name="comment[text]" placeholder="Text">
                </div>
                <div class="field">
                    <button class="ui teal basic button" type="submit">Add Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mobile only row space">
    <div class="column">
        <h1 style="text-align: center">Add A New Dish</h1>
